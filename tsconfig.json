{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/server/*": ["server/src/*"],
      "@/client/*": ["client/src/*"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", "client/dist", "server/dist"]
}